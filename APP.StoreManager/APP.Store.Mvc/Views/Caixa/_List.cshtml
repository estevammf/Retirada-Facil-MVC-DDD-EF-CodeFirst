@using APP.Store.Mvc.Helper
@model IEnumerable<APP.StoreManager.Domain.Entities.Caixa>

    <table class="table table-striped text-center">
        <tbody>
            <tr>
                <th>
                    Identificação do Caixa
                </th>

                <th>
                    Operador Responsável
                </th>
                <th>
                    Data de Cadastro
                </th>
                <th style="min-width: 130px;">
                    @Html.NoEncodeActionLink("<i class='fa fa-plus'></i>", "Create", "Create", "Caixa", routeValues: null, htmlAttributes: new { data_modal = "", @class = "btn btn-primary pull-right" })
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumeroIdentificador)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Operador.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataCadastro)
                    </td>
                    <td class="">
                        <div class="btn-group pull-right">
                            @Html.NoEncodeActionLink("<i class='fa fa-pencil'></i>", "Edit", "Edit", "Caixa", routeValues: new { id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                            @Html.NoEncodeActionLink("<i class='fa fa-info'></i>", "Details", "Details", "Caixa", routeValues: new { id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                            @Html.NoEncodeActionLink("<i class='fa fa-trash'></i>", "Delete", "Delete", "Caixa", routeValues: new { id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
