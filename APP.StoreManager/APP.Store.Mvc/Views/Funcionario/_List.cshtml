@using APP.Store.Mvc.Helper
@model IEnumerable<APP.StoreManager.Domain.Entities.Funcionario>

    <table class="table table-striped text-center">
        <tbody>
            <tr>
                <th>
                    Nome do Funcionário
                </th>
                <th>
                    CPF
                </th>
                <th>
                    Tlefone Fixo
                </th>
                <th>
                    Telefone Celular
                </th>
                <th>
                    Email
                </th>
                <th>
                    Data de Cadastro
                </th>
                <th style="min-width: 130px;">
                    @Html.NoEncodeActionLink("<i class='fa fa-plus'></i>", "Create", "Create", "Funcionario", routeValues: null, htmlAttributes: new { data_modal = "", @class = "btn btn-primary pull-right" })
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Cpf)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TelefoneFixo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TelefoneCelular)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.DataCadastro)
                    </td>
                    <td>
                        <div class="btn-group pull-right">
                            @Html.NoEncodeActionLink("<i class='fa fa-pencil'></i>", "Edit", "Edit", "Funcionario", routeValues: new { id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                            @Html.NoEncodeActionLink("<i class='fa fa-info'></i>", "Details", "Details", "Funcionario", routeValues: new { id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                            @Html.NoEncodeActionLink("<i class='fa fa-trash'></i>", "Delete", "Delete", "Funcionario", routeValues: new { id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

