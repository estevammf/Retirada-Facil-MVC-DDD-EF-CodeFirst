@model APP.Store.Mvc.Models.CaixaViewModel

@{
    ViewBag.TituloModal = "CADASTRAR NOVO CAIXA";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
            <h4 class="modal-title">@ViewBag.TituloModal</h4>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.LabelFor(model => model.NumeroIdentificador)
                        @Html.TextBoxFor(model => model.NumeroIdentificador, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.NumeroIdentificador)

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.FuncionarioId)
                        @Html.DropDownListFor(x => x.FuncionarioId, (IEnumerable<SelectListItem>)ViewBag.FuncionarioId, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FuncionarioId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input type="button" class="btn btn-default pull-left" data-dismiss="modal" value="Cancelar" />
            <input type="submit" class="btn btn-primary" value="Salvar" />
        </div>
  


}

