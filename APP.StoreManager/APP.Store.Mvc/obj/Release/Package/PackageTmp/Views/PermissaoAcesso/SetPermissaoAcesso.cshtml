@using APP.StoreManager.Infra.CrossCutting.Identity.Model
@model APP.Store.Mvc.Models.UsuarioPermissaoAcessoViewModel

@{
    ViewBag.TituloPagina = "Adicione uma nova permissão para: " + ViewBag.User.UserName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box">
    <div class="box-body box-success">
        @using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <h4>Conceder Permissão</h4>
        <hr />
        @Html.ValidationSummary(true)

        <h4></h4>
        @{
            ApplicationUser user = ViewBag.User;
        }

        @Html.Hidden("id", user.Id)
        
        <div class="form-group">
            @Html.LabelFor(model => model.Type)
            @Html.DropDownListFor(x => x.Type, (IEnumerable<SelectListItem>)ViewBag.Type, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
        </div>
        

        <div class="form-group">
            @Html.LabelFor(model => model.Value)
            @Html.TextBoxFor(model => model.Value, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="pull-right">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}
    </div>
</div>




<div>
    @Html.ActionLink("Voltar a lista de Usuários", "Index", "Usuario")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
