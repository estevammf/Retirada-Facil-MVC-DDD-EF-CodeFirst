@using APP.Store.Mvc.Helper
@model APP.Store.Mvc.Models.RendimentoViewModel

@using (Ajax.BeginForm("Create", "Rendimento", new AjaxOptions { OnSuccess = "handleSuccess" }))
{
    @Html.AntiForgeryToken()
    
   
       @Html.ValidationSummary(true)
        
        <div class="col-md-4">
            @Html.CustomEnumDropDownListFor(m => m.TipoTransacao, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TipoTransacao, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-4">
            @Html.TextBoxFor(model => model.Quantidade, new {Value="", @class = "form-control", @placeholder = "Quantidade de autenticações" })
            @Html.ValidationMessageFor(model => model.Quantidade, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-3">
            @Html.TextBoxFor(model => model.DataReferenciaString, new {Value="", @class = "form-control", @placeholder = "Data da autenticação" })
            @Html.ValidationMessageFor(model => model.DataReferenciaString, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-1">
            <button type="submit" class="btn btn-default text-success pull-right">Salvar</button>
        </div>
}
