@model APP.Store.Mvc.Models.RetiradaViewModel

@using (Ajax.BeginForm("Create", "Retirada", new AjaxOptions { OnSuccess = "handleSuccess" }))
{
    @Html.AntiForgeryToken()
    
 
    @Html.ValidationSummary(true)
    <div class="col-md-4">
        @Html.DropDownListFor(x => x.CaixaId, (IEnumerable<SelectListItem>)ViewBag.CaixaId, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CaixaId, "", new { @class = "text-danger" })
    </div>
    <div class="col-md-3">
        @Html.TextBoxFor(model => model.ValorString, new { Value = "", @class = "form-control", @type = "", @placeholder = "Valor inserido no envelope", data_thousands = ".", data_decimal = ",", data_prefix = "R$ " })
        @Html.ValidationMessageFor(model => model.ValorString, "", new { @class = "text-danger" })
    </div>
    <div class="col-md-3">
        @Html.TextBoxFor(model => model.NumeroEnvelope, new { @class = "form-control", @placeholder = "Identificação do envelope" })
        @Html.ValidationMessageFor(model => model.NumeroEnvelope, "", new { @class = "text-danger" })
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-default btn-block"><small>SALVAR</small></button>
    </div>
      
   
}
