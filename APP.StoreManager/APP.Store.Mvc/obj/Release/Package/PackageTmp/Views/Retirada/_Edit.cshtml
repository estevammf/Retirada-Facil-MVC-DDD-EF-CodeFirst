@using System.Web.UI.WebControls
@model APP.Store.Mvc.Models.RetiradaViewModel

@{
    ViewBag.TituloModal = "Alterar informações da retirada";
}

@using (Html.BeginForm())
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
        <h4 class="modal-title">@ViewBag.TituloModal</h4>
    </div>
    <div class="modal-body">

        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-12">
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.CaixaId)

                <div class="form-group">
                    @Html.LabelFor(model => model.ValorString)
                   @Html.TextBoxFor(model => model.ValorString, new { Value = Model.Valor , @id="valor_string", @class = "form-control", @type = "", data_thousands = ".", data_decimal = ",", data_prefix = "R$ " })
                    @Html.ValidationMessageFor(model => model.ValorString, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.NumeroEnvelope)
                    @Html.TextBoxFor(model => model.NumeroEnvelope, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NumeroEnvelope, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <input type="button" class="btn btn-default pull-left" data-dismiss="modal" value="Cancelar" />
        <input type="submit" class="btn btn-primary" value="Salvar" />
    </div>
}

<script>
    $("#valor_string").maskMoney();
</script>

